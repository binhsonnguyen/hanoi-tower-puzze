{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "sourceMap": true,
    "lib": ["ES2015", "dom"],
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": true,
    "outDir": "dist",
    "rootDir": "src",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src"
  ]
}
